import java.util.Random;
import java.util.Scanner;

void main() {
    Scanner scanner = new Scanner(System.in);
    Random random = new Random();

    System.out.println("Выберите: 1 - Камень, 2 - Ножницы, 3 - Бумага");

    int userChoice = readUserChoice(scanner);
    int computerChoice = random.nextInt(3) + 1;

    System.out.println("Вы выбрали: " + moveToString(userChoice));
    System.out.println("Диллер выбрал: " + moveToString(computerChoice));

    determineWinner(userChoice, computerChoice);
    scanner.close();
}

int readUserChoice(Scanner scanner) {
    int choice = 0;
    while (choice < 1 || choice > 3) {
        System.out.print("Ваш выбор: ");
        if (scanner.hasNextInt()) {
            choice = scanner.nextInt();
            if (choice < 1 || choice > 3) {
                System.out.println("Введите 1, 2 или 3.");
            }
        } else {
            System.out.println("Введите число.");
            scanner.next();
        }
    }
    return choice;
}

String moveToString(int choice) {
    return switch (choice) {
        case 1 -> "Камень";
        case 2 -> "Ножницы";
        case 3 -> "Бумага";
        default -> "Неизвестно";
    };
}

void determineWinner(int user, int computer) {
    if (user == computer) {
        System.out.println("Ничья");
    } else if ((user == 1 && computer == 2) ||
            (user == 2 && computer == 3) ||
            (user == 3 && computer == 1)) {
        System.out.println("Вы победили...");
    } else {
        System.out.println("Прощайся с черепушкой.");
    }
}
